%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], html: { class: "form-horizontal" } do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              = f.text_field(:title, label: "Title")
            .form-group
              = f.select(:category_id, options_for_select(Category.all.map { |category| [category.name, category.id]}))
            .form-group
              = f.text_area(:description, rows: 8)
            .form-group
              .col-sm-6
                %col.btn.btn-file
                  = f.file_field :large_cover, class: "form-control", label: "Large Cover"
            .form-group
              .col-sm-6
                %col.btn.bt-file
                = f.file_field :small_cover, class: "form-control", label: "Small Cover"
            .form-group
              = f.text_field(:video_url, label: "Video url")
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")

/ options_for_select((1..5).map { |num| [pluralize(num, "star") , num]}, selected)
