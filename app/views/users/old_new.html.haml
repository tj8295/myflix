%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8", html: { class: "form-horizontal" } ) do |f|
        %header
          %h1 Register
        = hidden_field_tag :invitation_token, @invitation_token
        = f.email_field :email, label: "Email Address"
        = f.password_field :password
        = f.text_field :full_name, label: "Full Name"
        %script(src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="pk_test_wUUlTBT8HkbSoT2DcHcE8hYP" data-image="/square-image.png" data-name="Purchase and Sign Up" data-description="Thank you for purchasing MyFlix." data-amount="999")
        / = f.submit "Sign Up"
